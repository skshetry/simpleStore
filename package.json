{
  "name": "simplestore",
  "version": "1.2.0",
  "description": "A simple store especially made for react",
  "main": "dist/store.js",
  "module": "dist/store.js",
  "author": "Saugat Pachhai",
  "license": "MIT",
  "scripts": {
    "init": "mkdir dist",
    "clean": "rm -rf dist",
    "prod": "NODE_ENV=production babel ./src/store.js -o dist/store.min.js",
    "dev": "babel ./src/store.js -o dist/store.js",
    "build": "npm run prod && npm run dev",
    "test": "jest",
    "coveralls": "cat coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js"
  },
  "devDependencies": {
    "@babel/cli": "^7.10.1",
    "@babel/core": "^7.10.2",
    "@babel/preset-env": "^7.10.2",
    "babel-jest": "^26.0.1",
    "babel-minify": "^0.5.1",
    "babel-plugin-transform-es2015-modules-umd": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "coveralls": "^3.1.0",
    "jest": "^26.2.1"
  },
  "files": [
    "dist"
  ],
  "jest": {
    "collectCoverage": true
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": 8,
            "ie": 8
          }
        }
      ]
    ],
    "env": {
      "production": {
        "presets": [
          "minify"
        ]
      }
    },
    "plugins": [
      "transform-es2015-modules-umd",
      "transform-object-rest-spread"
    ]
  },
  "dependencies": {
    "regenerator-runtime": "^0.13.5"
  }
}
